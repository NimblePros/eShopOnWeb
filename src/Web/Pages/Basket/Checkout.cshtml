@page
@model Microsoft.eShopWeb.Web.Pages.Basket.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form method="post">
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Shipping address</legend>

        <div class="mb-2">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Address1"></label>
            <input asp-for="Address1" class="form-control" />
            <span asp-validation-for="Address1" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label asp-for="Address2"></label>
            <input asp-for="Address2" class="form-control" />
            <span asp-validation-for="Address2" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-4 mb-2">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-2">
                <label asp-for="State"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-2">
                <label asp-for="ZipCode"></label>
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-2">
            <label asp-for="Country"></label>
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
    </fieldset>

    <hr />

    <h4>Your basket</h4>
    <table class="table">
        <thead>
            <tr><th>Product</th><th>Qty</th><th>Price</th></tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.BasketModel.Items.Count; i++)
        {
            var it = Model.BasketModel.Items[i];
            <tr>
                <td>@it.ProductName</td>
                <td>
                    <input type="hidden" name="items[@i].Id" value="@it.Id" />
                    <input type="number" name="items[@i].Quantity" value="@it.Quantity" min="1" class="form-control" />
                </td>
                <td>@it.UnitPrice.ToString("C")</td>
            </tr>
        }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Place order</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}